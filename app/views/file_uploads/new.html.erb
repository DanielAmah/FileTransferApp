<% if !@file.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @file.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @file, html: { multipart: true } do |f| %>
    <%= f.label :attachments %>
    <%= f.file_field :attachments, multiple: true  %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
